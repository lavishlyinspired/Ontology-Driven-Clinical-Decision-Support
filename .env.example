# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Vector Store (Neo4j-based)
NEO4J_VECTOR_INDEX=clinical_guidelines_vector

# Logging
LOG_LEVEL=INFO
